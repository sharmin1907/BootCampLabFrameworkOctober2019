<suite name="Selenium Test Suite" parallel="false">

    <parameter name="cloud" value="false"/>
    <parameter name="envName" value="saucelabs"/>
    <parameter name="browser" value="chrome"/>
    <parameter name="browserVersion" value="78.0"/>
    <parameter name="url" value="https://online.citi.com"/>
    <parameter name="platform" value="windows"/>

    <test name="Automation tests">
        <classes>
            <class name="homepageTests.SigninTest"/>
            <class name="homepageTests.MouseHoverNavigationTabs"/>
            <class name="homepageTests.CreditCardsPOMTests"/>
            <class name="homepageTests.ProductOfferingValidationTests"/>
            <class name="homepageTests.SearchTest"/>

        </classes>
    </test>
</suite>